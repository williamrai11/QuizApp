<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2">


        <TextView
            android:id="@+id/category_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blogger_sans_bold"
            android:gravity="center"
            android:text="General"
            android:textSize="25sp" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/total_question_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/blogger_sans_bold_italic"
            android:gravity="center"
            android:text="Question 100"
            android:textSize="20sp" />


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/blogger_sans_bold"
                android:gravity="center"
                android:text="Easy"
                android:textSize="25dp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/blogger_sans_bold"
                android:gravity="center"
                android:text="Medium"
                android:textSize="25sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/blogger_sans_bold"
                android:gravity="center"
                android:text="Hard"
                android:textSize="25sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="3">


            <TextView
                android:id="@+id/easy_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/blogger_sans_bold_italic"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/medium_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="@font/blogger_sans_bold_italic"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                />


            <TextView
                android:id="@+id/hard_score"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textSize="18sp"
                android:fontFamily="@font/blogger_sans_bold_italic"
                />


        </LinearLayout>


    </LinearLayout>


</android.support.v7.widget.CardView>