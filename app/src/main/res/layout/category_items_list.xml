<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/category_cardView"
    android:layout_width="match_parent"
    android:layout_height="225dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    android:elevation="12dp"
    app:cardElevation="12dp"
    app:cardCornerRadius="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/category_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/sc"
            android:layout_margin="12dp"
            />

        <TextView
            android:id="@+id/category_name"
            android:layout_toRightOf="@+id/category_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/science"
            style="@style/text"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="18dp"
            />

        <TextView
            android:id="@+id/category_level"
            android:layout_toRightOf="@+id/category_image"
            android:layout_below="@+id/category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/level_medium"
            android:textSize="15sp"
            android:fontFamily="sans-serif"
            android:layout_marginLeft="12dp"
            />

        <TextView
            android:id="@+id/category_descp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_image"
            android:text="@string/science_description"
            android:textSize="16sp"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            />

        <TextView
            android:id="@+id/category_line"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@id/category_descp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#321"
            />

        <Button
            android:id="@+id/btn_start_quiz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_line"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="@string/start_quiz"

            style="@style/Base.Widget.AppCompat.Button.Borderless"
            />


    </RelativeLayout>


</android.support.v7.widget.CardView>