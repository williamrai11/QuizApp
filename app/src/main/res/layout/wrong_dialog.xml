<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:background="@drawable/dialog_shape">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_marginTop="25dp"
            android:id="@+id/txt_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Your answer is incorrect"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/txt_wrong"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="The Correct Answer is"
            android:gravity="center"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/txt_explaination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/text"
            android:textSize="18sp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/jargon"
            />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:background="@drawable/custom_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/txt_explaination"
            android:layout_marginBottom="100dp"
            />

    </RelativeLayout>



</android.support.v7.widget.CardView>