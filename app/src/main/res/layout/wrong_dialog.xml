<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Match"
    android:background="@drawable/dialog_shape"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txt_wrong"
            style="@style/MatchWidth"
            android:layout_marginTop="25dp"
            android:gravity="center"
            android:text="Your answer is incorrect"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/text"
            style="@style/MatchWidth"
            android:layout_below="@+id/txt_wrong"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:text="The Correct Answer is"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txt_explaination"
            style="@style/MatchWidth"
            android:layout_below="@id/text"
            android:layout_marginTop="8dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="@string/jargon"
            android:textSize="18sp" />

        <Button
            android:id="@+id/btn_continue"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_explaination"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:background="@drawable/custom_button"
            android:text="Continue" />

    </RelativeLayout>


</android.support.v7.widget.CardView>