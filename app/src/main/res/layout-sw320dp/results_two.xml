<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/text_name"
        style="@style/headingText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="RESULT" />


    <android.support.v7.widget.CardView
        android:id="@+id/score_cardview"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/text_name"
        android:layout_margin="15dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:weightSum="2">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="vertical">


                <TextView
                    style="@style/scoreStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Score"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/score"
                    style="@style/numberStyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="45"
                    android:textSize="40sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="70dp">

                    <TextView
                        android:id="@+id/txt_correct"
                        style="@style/scoreStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="correct" />

                    <TextView
                        android:id="@+id/correct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_correct"
                        android:fontFamily="@font/blogger_sans_medium"
                        android:text="8"
                        android:layout_marginLeft="11dp"
                        android:textColor="#898181"
                        android:textSize="40sp" />


                    <TextView
                        android:id="@+id/txt_incorrect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        android:text="incorrect"
                        style="@style/scoreStyle"
                      />

                    <TextView
                        android:id="@+id/incorrect"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_correct"
                        android:layout_marginLeft="50dp"
                        android:gravity="center"
                        style="@style/numberStyle"
                        android:text="2" />

                </RelativeLayout>


            </LinearLayout>


            <TextView
                android:id="@+id/remarks"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:textSize="20sp"
                android:text="Hello my name is"
                android:gravity="center"

                />


        </LinearLayout>


    </android.support.v7.widget.CardView>





    <ImageButton
       android:id="@+id/play_again"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/right_arrow"
        android:layout_below="@+id/score_cardview"
        android:layout_toLeftOf="@id/divider"
        android:layout_marginTop="15dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_again"
        android:text="Next"
        android:layout_toLeftOf="@id/divider"
        style="@style/scoreStyle"
        android:layout_marginTop="5dp"
        />


    <View
        android:id="@+id/divider"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@+id/score_cardview"
        android:layout_centerHorizontal="true"

        />


    <ImageButton
        android:id="@+id/exit"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_logout"
        android:layout_below="@+id/score_cardview"
        android:layout_toRightOf="@id/divider"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/play_again"
        android:text="Finish"
        android:layout_toRightOf="@id/divider"
        style="@style/scoreStyle"
        android:layout_marginTop="5dp"
        />







</RelativeLayout>