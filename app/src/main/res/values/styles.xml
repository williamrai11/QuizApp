<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/blogger_sans</item>


    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="buttonTheme">
        <item name="android:textColor"></item>
        <item name="android:fontFamily">@font/blogger_sans</item>
    </style>

    <style name="textTheme">
        <item name="android:fontFamily">@font/blogger_sans_medium</item>
    </style>

    <style name="headingText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>

    <style name="numberStyle">
        <item name="android:fontFamily">@font/blogger_sans_medium</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/greyisColor</item>
    </style>

    <style name="scoreStyle">
        <item name="android:fontFamily">@font/blogger_sans</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/greyisColor</item>

    </style>
    
    
    <style name="Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <style name="MatchWidth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Match">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MatchOrientationVertical" parent="Match">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="MatchOrientationHorizontal" parent="Match">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="WrapOrientationVertical" parent="MatchWidth">
        <item name="android:orientation">vertical</item>

    </style>



    <style name="difficultyChooseText" parent="Wrap">
        <item name="android:textSize">25sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fontFamily">@font/blogger_sans_bold</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <!-- style for scoreboard card view-->
    <style name="scoreBoardCardView">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">10dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">5dp</item>
        
    </style>




</resources>
