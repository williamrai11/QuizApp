<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text">
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/blogger_sans</item>


    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="buttonTheme">
        <item name="android:textColor"></item>
        <item name="android:fontFamily">@font/blogger_sans</item>
    </style>

    <style name="textTheme">
        <item name="android:fontFamily">@font/blogger_sans_medium</item>
    </style>

    <style name="headingText">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>

    </style>

    <style name="numberStyle">
        <item name="android:fontFamily">@font/blogger_sans_medium</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/greyisColor</item>
    </style>

    <style name="scoreStyle">
        <item name="android:fontFamily">@font/blogger_sans</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@color/greyisColor</item>

    </style>

</resources>
